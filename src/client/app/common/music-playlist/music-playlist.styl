music-playlist {
  box-sizing: border-box;
  display:flex;
  flex-direction: column;

  background-color: $backgroundBlack;
  color: $basicWhite;

  h1 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 1rem;
    background-color: $primaryColor;
    padding: 1rem 0;
    height: 128px;
  }

  ul.playlist {
    flex-grow: 1;

    li {
      transition: 300ms all ease;
      padding: 1rem;
      margin: 0.5rem;
      border-radius: 0.25rem;
      text-align: center;

      &.selected {
        background-color: $backgroundPrimary;
      }

      &:hover {
        cursor: pointer;
        background-color: $backgroundHighlight;
      }

      .horizontal-separator {
        margin: 0.10rem auto;
        border: none;
        transform: rotate(45deg);
        color: transparentify($basicWhite, 0.8);

        &:before {
          font-size: 0.35rem;
          font-family: icons;
          content: '\E80F';
        }
      }

      .artist {
        font-style: italic;
      }
    }
  }
}


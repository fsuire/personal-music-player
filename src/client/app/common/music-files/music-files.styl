music-files {
  max-width: 50%;
  min-width: 30%;
  background-color: $backgroundWhite;
  margin: auto;
  border-radius: 0.25rem;
  padding: 1rem;

  display:flex;
  flex-direction: column

  .file-drop-zone {
    transition: all 300ms ease;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    border: 1px solid $filigreeColor;
    border-radius: 0.25rem;
    min-height: 10rem;
    background: linear-gradient(top, transparentify(#FFFFFF, 0.6) 10%, transparentify(#FFFFFF, 0) 100%);
    background-color: $backgroundWhite;

    &.nv-file-over {
      background-color: lighten($secondaryColor, 60%);
    }

    .file-list {
      flex-grow: 1;
    }

    .empty-drop-zone {
      margin: auto;
      user-select: none;

      &:before {
        font-size: 3rem;
        color: $filigreeFontColor;
        font-family: icons;
        content: '\E80A';
      }

      &:hover {
        cursor: default;
      }
    }

    button.upload-button:before {
      font-family: icons;
      content: '\E808';
    }
  }

}

body.common-dragging music-files .file-drop-zone {
  background-color: lighten($secondaryColor, 80%);
}

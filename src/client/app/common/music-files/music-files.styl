music-files {
  box-sizing: border-box;
  padding: 1rem;
  background-color: $backgroundWhite;
  display:flex;
  flex-direction: column
  overflow: hidden;

  table.result-list {
    width: 100%;
    margin-bottom: 1rem;
    border-radius: 0.5rem;

    td {
      padding: 0.5rem;
      border-right: 1px solid $filigreeFontColor;
      border-bottom: 1px solid $filigreeFontColor;

      &:first-child {
        border-left: 1px solid $filigreeFontColor;
      }
    }

    thead td {
      color: $basicWhite;
      background-color: $backgroundBlack;

      &:first-child {
        border-top-left-radius: 0.25rem;
      }

      &:last-child {
        border-top-right-radius: 0.25rem;
      }
    }

    tbody tr {
      transition: 300ms all ease;

      &:hover {
        background-color: $backgroundHighlight;
        cursor: pointer;
      }

      &:last-child td {
        &:first-child {
          border-bottom-left-radius: 0.25rem;
        }

        &:last-child {
          border-bottom-right-radius: 0.25rem;
        }
      }
    }
  }

  .file-drop-zone {
    transition: all 300ms ease;
    display: flex;
    flex-direction: column;
    border: 1px solid $filigreeColor;
    border-radius: 0.25rem;
    background: linear-gradient(top, transparentify(#FFFFFF, 0.6) 10%, transparentify(#FFFFFF, 0) 100%);
    background-color: $backgroundWhite;

    &.nv-file-over {
      background-color: lighten($highlightColor, 60%);
    }

    .file-list {
      //flex-grow: 1;
    }

    .empty-drop-zone {
      margin: auto;
      user-select: none;
      padding: 1rem;

      &:before {
        font-size: 3rem;
        color: $filigreeFontColor;
        font-family: icons;
        content: '\E80A';
      }

      &:hover {
        cursor: default;
      }
    }
  }

  button.upload-button:before {
    font-family: icons;
    content: '\E808';
  }

}

body.common-dragging music-files .file-drop-zone {
  background-color: lighten($highlightColor, 80%);
}

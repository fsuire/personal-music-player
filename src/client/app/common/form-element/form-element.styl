form-element {
  display: flex;
  flex-direction: column;

  _rightGap = 0.75rem;

  element-line {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-right: _rightGap;

    label {
      margin-right: 0.25rem;

      &::after {
        content: ':';
        margin-left: 0.25rem;
      }
    }

    input {
      flex-grow: 1;
    }
  }

  element-line.required {
    padding-right: 0;
    &::after {
      content: '*';
      width: _rightGap;
      text-align: right;
      font-size: 1.25rem;
    }
  }

  messages-line {
    text-align: right;
    padding-right: _rightGap;
  }
}

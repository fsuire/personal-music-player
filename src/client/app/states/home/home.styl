div.content[state="home"] {
  display: flex;
  flex-direction: column;

  section.panels {
    flex: 1 50;
    position: relative;
    overflow: hidden;
    margin-bottom: 1rem;

    .scrollable {
      border-radius: 0.25rem;
      position: absolute;
      width: 75%;
      margin: 0 auto;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      display: flex;
      flex-direction: row;
      justify-content: center;
      overflow-y: auto;

      music-files {
        border-right: 1px solid $filigreeColor;
      }
    }
  }

}

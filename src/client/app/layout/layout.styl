@require 'style/flex.styl';
@require 'style/form.styl';
@require 'style/table.styl';

body {
  width: 100vw;
  height: 100vh;
  background: url('/assets/app/layout/static/lemu.jpg') no-repeat center fixed;
  background-size : cover;
  font-family: standardFont;
  color: $primaryFontColor;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  
  div.content {
    flex-grow: 1;
    max-height: 100%;
    max-width: 100%;

    position: relative;
    z-index: 0;
  }

  p {
    margin-bottom: 1rem;
  }

  pre {
    font-family: monotypeFont;
  }
}

div {
  box-sizing: border-box;
}
